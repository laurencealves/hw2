float grid = 32; 

background (255, 255, 255);
size (720, 720);

int x=0;
int y=0;

for (x=0+30; x< width; x += grid){
  for (y=0+30; y < height; y += grid){
    noStroke ();
    colorMode (HSB, 360, 100, 100);
    fill (random(360), 100, 100);
      ellipse (x, y, 30, 30);
  }
      ellipse (y, x, 30, 30);
}
